generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     Json
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  startTS     DateTime
  endTS       DateTime
  description String
  image       String?
  channel     Int
}

model CultureEvent {
  id          Int       @id @default(autoincrement())
  title       String
  startTS     DateTime
  endTS       DateTime
  eventTS     DateTime?
  description String
  image       String?
}

model Slide {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  active Boolean
  time   Int
}

model Config {
  key   String @id
  value String
}

model Conference {
  id   Int      @id @default(autoincrement())
  room String
  who  String
  when DateTime
}

model Atelier {
  id    Int      @id @default(autoincrement())
  name  String
  room  String
  start DateTime
  end   DateTime
}
